{
  "name": "Employee",
  "plural": "employees",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "fullname": {
      "type": "string",
      "required": true
    },
    "createdAt": {
      "type": "date",
      "required": false
    },
    "updatedAt": {
      "type": "date",
      "required": false
    }
  },
  "validations": [],
  "relations": {
    "attendances": {
      "type": "hasMany",
      "model": "Attendance",
      "foreignKey": "userId"
    },
    "permits": {
      "type": "hasMany",
      "model": "Permit",
      "foreignKey": "userId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "onlyManager"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "manager",
      "permission": "ALLOW",
      "property": "onlyManager"
    }
  ],
  "methods": {}
}
